<div class="mx-auto mt-5 w-[95%] border-4 border-dark">
  <h2 class="bg-dark p-3 text-xl font-semibold text-light">Login</h2>
  <form id="loginForm" class="mx-auto flex w-[95%] flex-col text-xl">
    <label for="username">Username</label>
    <input class="mb-3 p-2" type="text" name="username" id="usernameInput" />
    <label for="password">Password</label>
    <input
      class="mb-3 p-2"
      type="password"
      name="password"
      id="passwordInput"
    />
    <div id="error" class="self-center text-red-500"></div>

    <button type="submit" class="rounded-md bg-gray-500 py-2">Login!</button>
    <a href="/signup">Sign up Instead</a>
  </form>
</div>

<script src="/js/login.js"></script>